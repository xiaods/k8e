#!/bin/bash
set -e -x

cd $(dirname $0)/..

. ./hack/version.sh

GO=${GO-go}

buildDate=$(date -u '+%Y-%m-%dT%H:%M:%SZ')

PKG="github.com/xiaods/k8e"
PKG_CONTAINERD="github.com/containerd/containerd"
PKG_RANCHER_CONTAINERD="github.com/rancher/containerd"
PKG_CRICTL="github.com/kubernetes-sigs/cri-tools"

VENDOR_PREFIX="${PKG}/vendor/"
VERSIONFLAGS="
    -X ${PKG}/pkg/version.Version=${VERSION}
    -X ${PKG}/pkg/version.GitCommit=${COMMIT:0:8}

    -X ${VENDOR_PREFIX}k8s.io/client-go/pkg/version.gitVersion=${VERSION}
    -X ${VENDOR_PREFIX}k8s.io/client-go/pkg/version.gitCommit=${COMMIT}
    -X ${VENDOR_PREFIX}k8s.io/client-go/pkg/version.gitTreeState=${TREE_STATE}
    -X ${VENDOR_PREFIX}k8s.io/client-go/pkg/version.buildDate=${buildDate}

    -X ${VENDOR_PREFIX}k8s.io/component-base/version.gitVersion=${VERSION}
    -X ${VENDOR_PREFIX}k8s.io/component-base/version.gitCommit=${COMMIT}
    -X ${VENDOR_PREFIX}k8s.io/component-base/version.gitTreeState=${TREE_STATE}
    -X ${VENDOR_PREFIX}k8s.io/component-base/version.buildDate=${buildDate}

    -X ${VENDOR_PREFIX}${PKG_CONTAINERD}/version.Version=${VERSION_CONTAINERD}
    -X ${VENDOR_PREFIX}${PKG_CONTAINERD}/version.Package=${PKG_RANCHER_CONTAINERD}
    -X ${VENDOR_PREFIX}${PKG_CRICTL}/pkg/version.Version=${VERSION_CRICTL}
"

LDFLAGS="
    -w -s"
STATIC="
    -extldflags '-static'
"

TAGS="ctrd apparmor seccomp no_btrfs netcgo osusergo providerless"
RUNC_TAGS="apparmor seccomp"
RUNC_STATIC="static"

if [ "$SELINUX" = "true" ]; then
    TAGS="$TAGS selinux"
    RUNC_TAGS="$RUNC_TAGS selinux"
fi

if [ "$STATIC_BUILD" != "true" ]; then
    STATIC=""
    RUNC_STATIC=""
else
    TAGS="static_build $TAGS"
fi

mkdir -p bin

if [ -z "$GOARM" ] && [ "arm" = "$("${GO}" env GOARCH)" ]; then
    GOARM=7
fi

rm -f \
    bin/runc \
    bin/containerd-shim \
    bin/containerd-shim-runc-v1 \
    bin/containerd-shim-runc-v2 \
    bin/kubectl \
    bin/crictl \
    bin/ctr \
    bin/k8e-agent \
    bin/k8e-server

cleanup() {
    exit_status=$?
    sudo rm -rf $TMPDIR
    exit ${exit_status}
}


INSTALLBIN=$(pwd)/bin
if [ ! -x ${INSTALLBIN}/cni ]; then
(
    echo Building cni
    TMPDIR=$(mktemp -d)
    trap cleanup EXIT
    WORKDIR=$TMPDIR/src/github.com/containernetworking/plugins
    git clone -b $VERSION_CNIPLUGINS https://github.com/rancher/plugins.git $WORKDIR
    cd $WORKDIR
    git switch -c $VERSION_CNIPLUGINS
    GOPATH=$TMPDIR CGO_ENABLED=0 "${GO}" build -tags "$TAGS" -ldflags "$LDFLAGS $STATIC" -o $INSTALLBIN/cni
)
fi

echo Building server
CGO_ENABLED=1 "${GO}" build -tags "$TAGS" -ldflags "$VERSIONFLAGS $LDFLAGS" -o bin/containerd
ln -s containerd ./bin/k8e-agent
ln -s containerd ./bin/k8e-server
ln -s containerd ./bin/kubectl
ln -s containerd ./bin/crictl
ln -s containerd ./bin/ctr

INSTALLBIN=$(pwd)/bin
VERSION_RUNC=v1.0.0-rc92
if [ ! -x ${INSTALLBIN}/runc ]; then
(
    echo Building runc
    TMPDIR=$(mktemp -d)
    trap cleanup EXIT
    WORKDIR=$TMPDIR/src/github.com/opencontainers/runc
    git clone -b $VERSION_RUNC https://github.com/opencontainers/runc.git $WORKDIR
    cd $WORKDIR
    git switch -c $VERSION_RUNC
    GOPATH=$TMPDIR make EXTRA_LDFLAGS="-w -s" BUILDTAGS="$RUNC_TAGS" $RUNC_STATIC
    cp -f $WORKDIR/runc $INSTALLBIN/runc
)
fi


INSTALLBIN=$(pwd)/bin
if [ ! -x ${INSTALLBIN}/containerd-shim ]; then
(
    echo Building containerd-shim
    TMPDIR=$(mktemp -d)
    trap cleanup EXIT
    WORKDIR=$TMPDIR/src/github.com/containerd/containerd
    git clone -b master https://github.com/containerd/containerd.git $WORKDIR
    cd $WORKDIR
    GOPATH=$TMPDIR make bin/containerd-shim
    cp -f $WORKDIR/bin/containerd-shim $INSTALLBIN/containerd-shim
    echo Building containerd-shim-runc-v2
    GOPATH=$TMPDIR make bin/containerd-shim-runc-v2
    cp -f $WORKDIR/bin/containerd-shim-runc-v2 $INSTALLBIN/containerd-shim-runc-v2
)
fi

ls -s $INSTALLBIN